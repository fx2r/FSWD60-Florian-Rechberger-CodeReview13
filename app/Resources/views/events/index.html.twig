{% extends 'base.html.twig' %}
{% block carousel %}
	<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://placeimg.com/1000/300/arch/grayscale" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://placeimg.com/1000/300/nature/grayscale?t=1554557732323" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://placeimg.com/1000/300/people/grayscale" alt="Third slide">
        </div>
      </div>
    </div>
{% endblock %}

{% block body %}
<div class="d-flex flex-column justify-content-center align-items-center mt-4">
	<h2 class="page-header mb-4">All events</h2>
	<div class="card-columns">	
		{% for event in events %}
		<div class="card">
			<img class="card-img-top" src="{{event.image}}" alt="Event image">
			<div class="card-body">
				<h5 class="card-title">{{event.name}}</h5>
				<p class="card-text">{{event.description[:80] ~ (event.description|length > 80 ? '...') }}</p>
				<hr>
				<p class="card-text">{{event.frequency}}</p>
				<p class="card-text">{{event.date|date('F j, Y')}}</p>
				<p class="card-text">{{event.time|date('g:i a')}}</p>
			</div>
			<div class="card-footer">
				<a href="{{event.link}}"><small class="text-muted"><i class="fas fa-globe mr-2"></i>{{event.link}}</small></a>
				<br>
				<small class="text-muted"><i class="fas fa-map-marker mr-2 mt-3"></i>{{event.place}}</small>
				<br>
				<small class="text-muted"><i class="fas fa-phone mr-2 my-3"></i>{{event.phone}}</small>
				<br>
				<small class="text-muted"><i class="fas fa-at mr-2"></i>{{event.email}}</small>
				<br>
				<a href="/details/{{event.id}}" class="btn btn-success mt-3 mb-2">View</a>
				<a href="/edit/{{event.id}}" class="btn btn-info mt-3 mb-2">Edit</a>
				<a href="/delete/{{event.id}}" class="btn btn-danger mt-3 mb-2">Delete</a> 
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}